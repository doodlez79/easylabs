{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["dom", "ESNext"],
        "module": "esnext",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "target": "esnext"
    },
    "include" : [
        "types/**/*",
        "apps/**/src/**/*",
        "packages/**/src/**/*"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
